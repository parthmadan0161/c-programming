
#include <stdio.h>
int add(int arr[], int n)
{
    int sum=0;
	if (n == 0)
		return 0;
		else
		return (add(arr,n-1)+arr[n-1]);
}
int main()
{
	int arr[100],n,i,sum;
	printf("enter the size of array");
	scanf("%d",&n);
	printf("enter the element in array");
	for(i=0;i<n;i++)
	scanf("%d",&arr[i]);
	sum=add(arr,n);
	printf("%d",sum);

	return 0;
}
